# Server Configuration
NODE_ENV=development
PORT=5000
BACKEND_URL=http://localhost:5000
FRONTEND_URL=http://localhost:5173

# Database
MONGODB_URI=mongodb://localhost:27017/streamverse

# Redis
REDIS_URL=redis://localhost:6379

# JWT Secrets
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production

# Cloudinary
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Anthropic AI (Claude)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Email Configuration (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=StreamVerse <noreply@streamverse.com>

# Stripe Payment Gateway
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Razorpay Payment Gateway
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret
RAZORPAY_WEBHOOK_SECRET=your-razorpay-webhook-secret

# DRM Configuration
DRM_SECRET_KEY=your-drm-secret-key-change-in-production
DRM_ENCRYPTION_KEY=your-drm-encryption-key-32-chars-long
HLS_SIGNING_SECRET=your-hls-signing-secret-change-in-production

# CDN URLs (Optional)
CDN_URL=https://cdn.streamverse.com
CLOUDFLARE_CDN_URL=https://cloudflare-cdn.streamverse.com
FASTLY_CDN_URL=https://fastly-cdn.streamverse.com

# File Upload Limits
MAX_VIDEO_SIZE=5368709120
MAX_IMAGE_SIZE=10485760

# Session Configuration
SESSION_SECRET=your-session-secret-change-in-production
SESSION_EXPIRY=604800000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ClamAV Antivirus (Optional)
CLAMAV_HOST=localhost
CLAMAV_PORT=3310

# Monitoring & Analytics (Optional)
SENTRY_DSN=
GOOGLE_ANALYTICS_ID=

# Social Media OAuth (Optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=

# SMS Service (Optional - for OTP)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Feature Flags
ENABLE_WATCH_PARTY=true
ENABLE_LIVE_TV=true
ENABLE_SHORTS=true
ENABLE_AI_RECOMMENDATIONS=true
ENABLE_DRM=false
ENABLE_SPATIAL_AUDIO=false

# Admin Configuration
ADMIN_EMAIL=admin@streamverse.com
ADMIN_PASSWORD=change-this-password-immediately

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Geo-blocking
DEFAULT_REGION=US
ENABLE_GEO_BLOCKING=false

# Video Processing
FFMPEG_PATH=/usr/bin/ffmpeg
FFPROBE_PATH=/usr/bin/ffprobe
TEMP_DIR=./temp
VIDEO_PROCESSING_CONCURRENCY=2

# Cache TTL (seconds)
CACHE_TTL_SHORT=300
CACHE_TTL_MEDIUM=3600
CACHE_TTL_LONG=86400

# Backup Configuration (Optional)
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
